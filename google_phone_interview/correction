


def it_has_the_letters?(letters, word)
  letters.all? { |i| word.include?(i) }          <====== THIS WILL NOT WORK IN EVERY CASE, ex: letters: ['p','o','l'], word = 'pool'
end



def it_has_the_letters?(letters, word)          <====== THIS WILL WORK IN EVERY CASE
  letters.each do |letter|
    if word.include?(letter)
      word.sub(letter, '')
    else
      return false
    end
  end
  
  true
end


def get_all_shuffles(letters)         <====== ACTUALLY DEFINE THIS FUNCTION!!!!
  len = letters.length
  result = []
  
  factorial(len).times do
    result << letters.shuffle
  end
  
  result
end

def factorial(num)
  return 1 if num <= 1
  num * factorial(num - 1) 
end






